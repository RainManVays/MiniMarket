<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rollnikoff</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="header bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-4" style="font-size40px;">
                    <a  href="@Url.Action("Index","Home")">
                        <img src="~/images/logo_top.png" />
                    </a>
                </div>
                <div class="col-4 text-center">
                    РОСТОВ-НА-ДОНУ ул.Жмайлова 4/2
                    <p>Часы работы:с 10:00 - 22:00</p>

                </div>
                <div class="col-4 text-center">
                    Бесплатная доставка по ЗЖМ от 650руб
                </div>
            </div>
            <!--/row-->
        </div>
        <!--container-->
    </div>


    <nav class="navbar navbar-expand-sm sticky-top navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/images/rollnikoff_mini.png" width="30" height="30" alt="" /> Rollnikoff
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    @await Component.InvokeAsync("CategoryMenu")

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        @await Component.InvokeAsync("CartComponent")
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div class="container product-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="container-fluid">
        <p>&copy; 2018 - MiniMarket</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
