@model MiniMarket.Models.DeliveryArea

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>DeliveryArea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Edit", "DeliveryArea", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label asp-for="Name" class="control-label">@Html.DisplayNameFor(x => x.Name)</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @if (Model.Image == null)
        {
            @:None

        }
    else
    {
        <img width="150" height="150" src="@Url.Action("GetDeliveryAreaImage","DeliveryArea",new { Model.Id })" />
    }
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" name="image" type="file" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
}
    </div>
</div>

<div>
