@model IEnumerable<MiniMarket.Models.DeliveryArea>
@{
    ViewData["Title"] = "Delivery Area List";
}

<h2>Delivery Area List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Image == null)
                    {
                        @:None
            }
            else
            {
                    <img width="100" height="100" src="@Url.Action("GetDeliveryAreaImage","DeliveryArea",new { item.Id })" />
            }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Create new Delivery Area", "Create")
</p>