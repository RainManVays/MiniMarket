@model IEnumerable<MiniMarket.Models.Stock>

@{
    ViewData["Title"] = "Stocks";
}

<h2>Stocks items</h2>


<span>Corrent image size - 1920x560</span>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @if (item.Image == null)
                {
                @:None
                }
                else
                {
                   <img width="200" height="100" src="@Url.Action("GetStockImage","StockManagement",new { item.Id })" />
                }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    @Html.ActionLink("Create new stock", "Create")
</p>