@model MiniMarket.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("Edit", "StockManagement", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" name="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.Image == null)
                {
                    @:None
                }
                else
                {
                    <img width="150" height="150" src="@Url.Action("GetStockImage","StockManagement",new { Model.Id })" />
                }

                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" name="image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>