@model IEnumerable<MiniMarket.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateInsert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateInsert)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("AddComment", "AddComment", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("ChangeStatus", "ChangeStatus", new { id = item.Id })
                </td>
            </tr>
            @if (item.Address != null)
            {
            <thead>
                <tr>
                    <th>
                        Город
                    </th>
                    <th>
                        Улица
                    </th>
                    <th>
                        Телефон
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Область доставки
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.DeliveryAreaId)
                </td>
            </tr>
        }

        }
        </tbody>
    </table>
